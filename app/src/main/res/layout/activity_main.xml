<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ml_kit"/>
    <Button
            android:id="@+id/btnSnap"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Snap Image"/>
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:gravity="center">
        <Button
            android:id="@+id/btnDetectText"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:text="Detect Text"/>
        <Button
            android:id="@+id/btnLabelImage"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Label Image"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutButtons2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center">
        <Button
            android:id="@+id/btnDetectBarcode"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginRight="30dp"
            android:text="Detect Barcode"/>
        <Button
            android:id="@+id/btnRecognizeFace"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Face Recognize"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvImageData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:hint="Processed data from image"
        android:layout_marginTop="10dp"/>
</LinearLayout>